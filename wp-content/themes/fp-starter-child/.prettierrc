{
  "overrides": [
    {
      "files": "*.php",
      "options": {
        "phpVersion": "8.2",
        "printWidth": 140,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "braceStyle": "1tbs",
        "parser": "php",
        "plugins": ["@prettier/plugin-php"]
      }
    }
  ],
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "useTabs": false,
  "endOfLine": "lf",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "htmlWhitespaceSensitivity": "ignore",
  "singleAttributePerLine": true
}
